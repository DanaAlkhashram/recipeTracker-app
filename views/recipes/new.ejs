<%- include('../partials/head') %>
<form action="/recipes" method="POST" class="container mt-4"
            style="max-width: 700px;">
            <h2 class="mb-4">Create a Recipe</h2>

            <div class="row mb-3 align-items-center">
                <label for="title" class="col-sm-2 col-form-label">Title:</label>
                <div class="col-sm-10">
                    <input type="text" name="title" id="title" class="form-control"
                        required>
                </div>
            </div>

            <div class="row mb-3 align-items-center">
                <label for="ingredients" class="col-sm-2 col-form-label">Ingredients:</label>
                <div class="col-sm-10">
                    <input type="text" name="ingredients" id="ingredients" 
                        class="form-control" required>
                </div>
            </div>

            <div class="row mb-3 align-items-center">
                <label for="steps" class="col-sm-2 col-form-label">Steps:</label>
                <div class="col-sm-10">
                    <textarea name="steps" id="steps" rows="3" class="form-control"
                        required></textarea>
                </div>
            </div>

            <div class="row mb-3 align-items-center">
                <label for="image" class="col-sm-2 col-form-label">Image URL:</label>
                <div class="col-sm-10">
                    <input type="text" name="image" id="image" class="form-control">
                </div>
            </div>

            <div class="text-end">
                <button type="submit" class="btn btn-primary">Add a Recipe</button>
            </div>
        </form>

